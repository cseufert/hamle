  "type": "library",
  "keywords": [
    "template",
    "templating",
    "model",
    "compiled",
    "markup",
    "forms",
    "html",
    "hamle",
    "jade",
    "haml"
  ],
  "homepage": "https://github.com/cseufert/hamle",
  "license": "MIT",
  "authors": [
    {
      "name": "Chris Seufert",
      "email": "chris@seufert.id.au",
      "role": "Developer"
    }
  ],
  "support": {
    "issues": "https://github.com/cseufert/hamle/issues",
    "source": "https://github.com/cseufert/hamle"
  },
  "require": {
    "php": ">=7.4.0",
    "psr/log": "~1.0",
    "ext-mbstring": "*"
  },
  "require-dev": {
    "phpunit/phpunit": ">= 8.5",
    "vimeo/psalm": "^4.7"
  },
  "autoload": {
    "psr-4": {
      "Seufert\\Hamle\\": "php/hamle/"
    }
  },
  "scripts": {
    "test": "phpunit"
  }
}
